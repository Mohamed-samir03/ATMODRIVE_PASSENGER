<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trip_date_time_fragment"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.trip.presentation.fragment.TripDateTimeFragment">

    <View
        android:id="@+id/drag_handle_date_time"
        android:layout_width="0dp"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/quinary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.30" />

    <ImageView
        android:id="@+id/img_close_trip_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/quinary"
        android:padding="@dimen/_6sdp"
        android:onClick="onClick"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drag_handle_date_time" />

    <TextView
        android:id="@+id/tv_select_trip_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:text="Select trip date and time"
        android:textColor="@color/title"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drag_handle_date_time" />

    <EditText
        android:id="@+id/et_select_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_16sdp"
        android:hint="Select date"
        android:textColor="@color/title"
        android:textColorHint="@color/hint"
        android:textSize="@dimen/_14sdp"
        android:backgroundTint="@color/hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_select_trip_date_time" />

    <EditText
        android:id="@+id/et_select_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_16sdp"
        android:backgroundTint="@color/hint"
        android:hint="Select time"
        android:textColor="@color/title"
        android:textColorHint="@color/hint"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_select_date" />

    <Button
        android:id="@+id/btn_confirm_trip_date_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/primary"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_select_time" />

</androidx.constraintlayout.widget.ConstraintLayout>